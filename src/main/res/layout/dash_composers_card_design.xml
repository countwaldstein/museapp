<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="#F8F8F8"
        android:padding="10dp">



        <TextView
            android:id="@+id/db_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:fontFamily="@font/acme"
            android:text="Ludwih van Beethoven"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/db_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/db_card_title"

            android:padding="10dp"
            android:text="description, description, description, description, description" />

        <ImageView
            android:id="@+id/db_card_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/ludwig"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>